{% extends 'base.html.twig' %}

{% block body %}

    <form action="{{ path('security_login') }}" method="post">
        <fieldset>
            <legend><i class="fa fa-lock" aria-hidden="true"></i> Connexion </legend>
            <div class="form-group">
                <label for="username">Email/user</label>
                <input type="text" id="username" required name="_username" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe </label>
                <input type="password" id="password" required name="_password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-sign-in" aria-hidden="true"></i> Connecter
            </button>
        </fieldset>
    </form>


{% endblock %}