{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {% for article in articles %}
        <div class="col">
            <div class="card h-100">
                {% if article.image %}
                    <img src="{{ asset('uploads/article/image/' ~ article.image) }}" class="card-img-top" alt="">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content|striptags|slice(0,150) ~ '...' }}</p>
                    <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Ã‰crit le {{ article.createdAt|date('d/m/Y') }}</small>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
